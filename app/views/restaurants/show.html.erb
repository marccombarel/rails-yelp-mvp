<div class="container">
  <h1>Restaurants <%= @restaurant.name %></h1>
  <br>
  <p>
    <%= link_to 'Back to restaurants list', restaurants_path %> |
    <%= link_to 'Edit', edit_restaurant_path(@restaurant) %> |
    <%= link_to 'Delete', restaurant_path(@restaurant), data: {confirm: "Are you sure?"}, :method => :delete%>
  </p>
  <br>
  <h3><%= @restaurant.name %></h3>
  <h4><%= @restaurant.category %></h4>
  <p><%= @restaurant.address %></p>
  <p><%= @restaurant.phone_number %></p>
  <br>
  <!-- add reviews -->
  <p> ----------------------------------------------------------------------------------------------------------------- </p>
  <%= link_to '+ Add a new Review', new_restaurant_review_path(@restaurant) %>
  <br>
  <% @restaurant.reviews.reverse.each do |review| %>
    <h3><%= '*' * review.rating %></h3>
    <p><%= review.content %></p>
  <% end %>
</div>
